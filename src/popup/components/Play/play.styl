.play-icon
  width 18px
  height 18px
.play-content
  position absolute
  transition width .2s, opacity .2s, background .3s
  top 47px
  width 26px
  height 24px
  right -20px
  cursor pointer
  border-radius 200px
  padding 3px
  opacity 0
  .play-icon
    margin-left 6px
    margin-top 4px

.play-label
  color #FFF
  position absolute
  top 9px
  right 12px
  font-weight bold
  transition .1s ease-in
  visibility hidden

.play-btn
    position absolute
    top 7px
    left 9px
    border-style solid
    border-color transparent #FFF transparent #FFF
    border-width 8px 13px 8px 0
    &.stop
        border-width 6px 13px 7px 0
        top 9px
        background #FFF
    &.to-play
        transform rotate(180deg)
        border-width 8px 13px 8px 0

.play-btn.stop, .play-btn.to-play
    transition transform 300ms cubic-bezier(0, 0, 0.2, 1), border-top-width 300ms cubic-bezier(0, 0, 0.2, 1), border-bottom-width 300ms cubic-bezier(0, 0, 0.2, 1), -webkit-transform 300ms cubic-bezier(0, 0, 0.2, 1)