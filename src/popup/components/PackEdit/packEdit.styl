.config-package
  position relativa
  .btn
    font-weight bold
    text-transform none
    position relative
  .btn-back
    background transparent
    color gray-border
    .arrow-back
      width 40px
      height 40px
      transform rotateZ(90deg)
      fill gray-light
      position absolute
      right 50px
      top -4px
      transition transform

  .btn-save
    background green-light
    font-size 12px
    padding-top 15px
    padding-bottom 15px
    float right
  .btn-delete
    float right
    width 110px
    margin-right 20px
    color red-light
    text-align right
    background transparent
    transition all .3s ease
    padding-top 15px
    padding-bottom 15px
    .trash-icon
      width 30px
      height 30px
      fill red-light
      position absolute
      left 10px
      top 5px
    &:hover
      color darken(red-light, 20%)
  .title-package--container
    margin-top 20px
    .input-title-package
      font-size 30px
      height 43px
      color color-4
  .description-package--container
    .input-description-package
      color gray-light
  .card-delete
    position absolute
    right -6px
    top -11px
    background color-2
    border-radius 100%
    width 30px
    height 30px
    text-align center
    cursor pointer 
    transition all .3s ease
    &:hover
      width 70px
      border-radius 200px
      text-align right
      .trash-card
        transform scale(1.1)
      label
        opacity 1
    label
      float left
      color #FFF
      margin-top 8px
      margin-left 9px
      opacity 0
    .trash-card
      width 18px
      height 18px
      fill #FFF
      margin-top 5px
      transition all .2s ease
      float right 
      margin-right 5px 