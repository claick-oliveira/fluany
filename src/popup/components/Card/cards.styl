.card-content
  padding 0
  margin-top 50px
  margin-bottom 70px
  list-style none
  display flex
  justify-content space-between
  .card-item
    width 124px
    height 124px
    border-radius 4px
    transition all .3s ease-in
    .card-item--count
      color #FFF
      font-size 50px
      margin 0
      font-weight bold
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
    .card-item-block
      transition all .4s ease-in
      z-index 12
      &.color-1
        background color-1
      &.color-2
        background color-2
      &.color-3
        background color-3
      &.color-4
        background color-4
      width 124px
      height 124px
      position absolute
      cursor pointer
    .card-edit-container
      opacity 0
      visibility hidden
      z-index 13
      transition all .3 ease-in
    &.isEditing
      .card-item-block
        left 0
      .card-edit-container
        opacity 1
        visibility visible
        position absolute
        left 124px
        width 80%
        height 124px
        background rgb(247, 247, 247)

.card-edit-container
  .card-edit-content
    width calc(50% - 21px)
    float left
    height 100%
    padding-left 19px
    &:first-child
      padding-left 20px
      position relative
      &:after
        content ""
        position absolute
        width 2px
        height 100%
        background #efefef
        right 0
        top 0
    p
      font-size 22px
      margin-bottom 10px
      color rgba(184, 189, 199, 1)
      font-weight bold
    input
      width 84%
      height 32px
      padding-left 10px
      outline none