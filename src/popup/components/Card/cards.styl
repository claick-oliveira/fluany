.card-content
  padding 0
  margin-top 50px
  margin-bottom 70px
  list-style none
  display flex
  flex-wrap wrap
  .card-item
    width 123px
    height 123px
    transition all .2s ease-in
    margin-top 20px
    margin-right 21px
    z-index 1
    &:last-child
      margin-right 0
    &.card-item--new
      border 2px dotted #bfbfbf
      border-radius 4px
      margin-top 21px
      width 118px
      height 118px
      .card-item-block
        width 118px
        height 118px
        .card-item--more, .item-more-message
          color #bfbfbf
          font-size 40px
          position absolute
          font-weight bolder
          top 50%
          left 50%
          margin 0
          margin-top -4px
          transform translate(-50%, -50%)
        .item-more-message
          margin-top 30px
          font-size 14px
          text-transform uppercase
          width 100%
          

    &:nth-child(4n+4)
      margin-right 0
    .card-item--count
      color #FFF
      font-size 20px
      margin 0
      font-weight bold
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      transition all .2s ease-out
      width 115px
      text-overflow ellipsis
      white-space nowrap
      overflow hidden
    .card-item-block
      border-radius 4px
      overflow hidden
      text-align center
      z-index 12
      &.color-1
        background color-1
      &.color-2
        background color-2
      &.color-3
        background color-3
      &.color-4
        background color-4
      width 124px
      height 124px
      position absolute
      cursor pointer
      .arrow-back
        fill #FFF
        transform rotateZ(90deg)
        position absolute
        left 33px
        top -13px
        width 60px
        opacity 0
        visibility hidden
        transition all .1s ease-in
    .card-edit-container
      opacity 0
      visibility hidden
      z-index 13
      transition all .3 ease-in
    &.isEditing
      z-index initial
      .card-item-block
        left 0
        border-radius 0
        .arrow-back
          opacity 1
          visibility visible
       &:hover
        transform initial
      .card-edit-container
        opacity 1
        visibility visible
        position absolute
        left 124px
        width 80%
        height 124px
        background rgb(247, 247, 247)
      .card-item--count
        opacity 0
        visibility hidden
      .tooltip-card
        display none
    &:hover
      transform translate(0, -5px)
      box-shadow 0px 12px 5px -8px rgba(0,0,0,0.2)
      .card-item--count
        opacity 0
      .tooltip-card
        transform translateY(0)
        opacity 1

.tooltip-card
  transition all .3s ease
  padding 10px 0
  width 124px
  border-radius 4px
  height 85%
  opacity 0
  z-index 15
  transform translateY(100%)
  p
    margin 0
    margin-bottom 2px
    color #FFF
    font-size 20px
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    font-weight bold
    width 115px
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
  span
    font-weight bold
  &.color-1
    background darken(color-1, 10%)
  &.color-2
    background darken(color-2, 10%)
  &.color-3
    background darken(color-3, 10%)
  &.color-4
    background darken(color-4, 10%)

.card-edit-container
  .card-edit-content
    width calc(50% - 21px)
    float left
    height 100%
    padding-left 19px
    &:first-child
      padding-left 20px
      position relative
      &:after
        content ""
        position absolute
        width 2px
        height 100%
        background #efefef
        right 0
        top 0
    p
      font-size 22px
      margin-bottom 10px
      color rgba(184, 189, 199, 1)
      font-weight bold
    input
      width 84%
      height 32px
      padding-left 10px
      outline none